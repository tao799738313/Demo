/* components/prize/prize.wxss */

.mask{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  background-color: rgba(0,0,0,0.7);
  z-index: 10;
}

.maskBox{
  border: 2px solid rgb(255,45,62);
  position: absolute;
  width: 80vw;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background-color: white;
  /* border: 2px solid #1fad4e; */
  border-radius: 5px;
  padding: 4.2vw 4vw 4vw 4vw;
  max-height: 70vh;
  overflow: auto;
}

.maskBox_close{
  position: absolute;
  width: 80vw;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
} 
.maskBox_close .maskBox{
  border: 2px solid rgb(255,45,62);
  position: static;
  width: auto;
  top: initial;
  left: initial;
  transform: none;


  background-color: white;
  /* border: 2px solid #1fad4e; */
  border-radius: 5px;
  padding: 4.2vw 4vw 4vw 4vw;
}

.btnLineRight{
  display: flex;
  justify-content: flex-end;
}

.btnLineRight .btn{
  font-weight: 600;
  font-size: 15px;
  margin-left: 2vw;
}
.btn_close{
  width: 10vw;
  height: 10vw;
  background-color: rgb(255,45,62);
  border-radius: 50%;
}
.inpView{
  display: flex;
  align-items: center;
  border: 2px solid rgb(255,45,62);
  padding: 2vw;
  border-radius: 1.2vw;
  margin-bottom: 2vw;
  margin-top: 1vw;
}
.inpView input{
  flex: 1;
}
.inp_btn{
  font-size: 14px;
  font-weight: 600;
}
.tishi{
