/**index.wxss**/
#frame_view{
  position: absolute;
  top: 76vw;
  left: 50%;
  transform: translateX(-50%);
  width:69vw;
  height:57vw;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.frame_row{
  display: flex;
}
.frame_item{
  box-sizing: border-box;
  width:23vw;
  height:19vw;
  padding: 1vw;
  border-radius: 2vw;
  text-align: center;
}
.frame_row .frame_item:nth-last-of-type(1){
  margin-left: 0.5vw;
} 
.frame_row .frame_item:nth-last-of-type(3){
  margin-right: 0.5vw;
} 
.frame_item image{
  width:12vw;
  height:12vw;
  margin-top: 2vw;
}
#bgTop{
  width: 100vw;
  vertical-align: middle;
}
#bgBetween{
  background-color: rgb(254,46,62);
  padding: 0 0 4vw 0;
}
#actTime{
  position: absolute;
  top: 64vw;
  width: 100vw;
  color: #ffd9c3;
  font-weight: 600;
}
#haiyou{
  position: absolute;
  top: 140vw;
  width: 100vw;
  color: #ffd9c3;
  font-weight: 600;
}
#lotterys{
  box-sizing: content-box;
  height: 30px;
  background-color: white;
  border-radius: 5px;
  overflow: hidden;
  width: 74vw;
  margin: 7vw auto;
}
.h30{
  font-size: 14px;
  height: 30px;
  text-align: center;
  line-height: 30px;
}

.fixedBtn{
   position: absolute;
   width: 20vw;
   right: 0;
   top: 10vw;
}
